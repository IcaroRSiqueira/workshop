<h3><%= @challenge.title %></h3>
<p><%= @challenge.description %></p>

<h5>Resultado:</h5>
<p><%= @solution.result %></p>

<% if @comments.present? %>
  <h2>Comentários</h2>
    <% @comments.each do |comment| %>
      <h5>Enviado por:<%= comment.user.email %></h5>
      <p>Comentário: <%= comment.body %></p>
    <% end %>
<% end %>

<%= form_for [@solution, @comment] do |f| %>
  <%= f.label :body, 'Comentário' %>
  <%= f.text_area :body %>
  <%= f.submit 'Comentar' %>
<% end %>